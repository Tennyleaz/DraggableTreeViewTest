<Window x:Class="DraggableTreeViewTest.EditDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DraggableTreeViewTest"
        mc:Ignorable="d"
        Title="EditDlg" Height="200" Width="400" WindowStartupLocation="CenterOwner">
    <Grid>
        <TextBox Name="TB_categoryName" HorizontalAlignment="Left" Height="28" TextWrapping="Wrap" Text="" FontSize="16" VerticalAlignment="Top" Width="294" Margin="44,50,0,0"/>
        <Button Name="okBtn" Content="OK" Click="okBtn_Click" IsDefault="True" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Top" Width="85" Margin="155,110,0,0" Height="30"/>
        <Button Name="cancelBtn" Content="Cancel" Click="cancelBtn_Click" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Top" Width="85" Margin="253,110,0,0" Height="30"/>
        <TextBlock Name="TextBlock_msg" HorizontalAlignment="Left" TextWrapping="Wrap" Foreground="Red" Visibility="Collapsed" VerticalAlignment="Top" Margin="44,80,0,0">Input Error!</TextBlock>
    </Grid>
</Window>
